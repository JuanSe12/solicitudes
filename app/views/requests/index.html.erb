

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Movil</th>
      <th>Producto</th>
      <th>Npro</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Estado</th>
      <th>Tiposoli</th>
      <th colspan="4">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <% if request.estado == 0  %>
      <tr>
        <td><%= request.nombre %></td>
        <td><%= request.telefono %></td>
        <td><%= request.movil %></td>
        <td><%= request.producto %></td>
        <td><%= request.npro %></td>
        <td><%= request.direccion %></td>
        <td><%= request.email %></td>
        <td><%= estados(request.estado) %></td>
        <td><%= tipo(request.tiposoli) %></td>
        <td><%= link_to "Reclamar", request_reclamar_path(request)%></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= button_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= request.idus %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

